---
// AnimatedConsole.astro - Animated Code Pathfinder Security Scan output
// Shows actual pathfinder scan results with typing animation
---

<div class="animated-console-container">
  <pre id="console-output" class="console-pre"></pre><span class="cursor" id="cursor"></span>
</div>

<style>
  .animated-console-container {
    background: linear-gradient(135deg, #1e1e2e 0%, #181825 100%);
    border-radius: 8px;
    padding: 24px;
    margin: 32px auto;
    max-width: 900px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    font-family: 'Courier New', 'Courier', monospace;
    font-size: 13px;
    line-height: 1.5;
    overflow-x: auto;
  }

  .console-pre {
    margin: 0;
    padding: 0;
    color: #e0e0e0;
    white-space: pre;
    display: inline;
    border: none !important;
    border-bottom: none !important;
  }

  .console-pre span {
    border: none !important;
    text-decoration: none !important;
    border-bottom: none !important;
    box-shadow: none !important;
    outline: none !important;
    background-image: none !important;
  }

  .cursor {
    display: inline-block;
    width: 10px;
    height: 18px;
    background-color: #20b2aa;
    animation: blink 1s step-end infinite;
    vertical-align: text-bottom;
    margin-left: 2px;
  }

  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }

  /* Color scheme for scan output */
  .header {
    color: #89b4fa;
    font-weight: bold;
  }

  .results-label {
    color: #cdd6f4;
  }

  .critical-label {
    color: #f38ba8;
    font-weight: bold;
  }

  .severity-tag {
    color: #f38ba8;
  }

  .rule-name {
    color: #89dceb;
  }

  .cwe {
    color: #fab387;
  }

  .filename {
    color: #a6e3a1;
  }

  .line-number {
    color: #6c7086;
  }

  .code-line {
    color: #cdd6f4;
  }

  .pointer {
    color: #f38ba8;
  }

  .confidence {
    color: #f9e2af;
  }

  .comment {
    color: #6c7086;
  }

  .prompt {
    color: #a6e3a1;
    font-weight: bold;
  }

  .command {
    color: #cdd6f4;
  }
</style>

<script>
  // Code Pathfinder Security Scan typing animation
  const output = document.getElementById('console-output');
  const cursor = document.getElementById('cursor');

  const lines = [
    { text: '$ ', className: 'prompt', charDelay: 80 },
    { text: 'pathfinder scan --project ./python_cpf_app --rules ./cpf_rules/all_rules.py', className: 'command', charDelay: 15 },
    { text: '\n\n', className: '', charDelay: 500 },

    { text: 'Code Pathfinder Security Scan\n\n', className: 'header', charDelay: 8 },
    { text: 'Results:\n\n', className: 'results-label', charDelay: 5 },
    { text: 'Critical Issues (2):\n\n', className: 'critical-label', charDelay: 10 },

    { text: '  [', className: '', charDelay: 5 },
    { text: 'critical', className: 'severity-tag', charDelay: 8 },
    { text: '] [Taint-Local] ', className: '', charDelay: 5 },
    { text: 'python-sqli-execute', className: 'rule-name', charDelay: 7 },
    { text: ': detect_sql_injection_execute\n', className: '', charDelay: 5 },
    { text: '    ', className: '', charDelay: 5 },
    { text: 'CWE-89', className: 'cwe', charDelay: 8 },
    { text: ' | ', className: '', charDelay: 5 },
    { text: 'A03:2021', className: 'cwe', charDelay: 8 },
    { text: '\n\n', className: '', charDelay: 100 },

    { text: '    app.py', className: 'filename', charDelay: 7 },
    { text: ':45\n', className: 'line-number', charDelay: 5 },
    { text: '        42 | \n', className: 'line-number', charDelay: 3 },
    { text: '        43 |     ', className: 'line-number', charDelay: 3 },
    { text: '# VULNERABLE: String concatenation\n', className: 'comment', charDelay: 5 },
    { text: '        44 |     sql = "SELECT * FROM users WHERE name LIKE \'%\' + search_term + \'%\'"\n', className: 'code-line', charDelay: 3 },
    { text: '      > 45 |     ', className: 'pointer', charDelay: 5 },
    { text: 'cursor.execute(sql)\n', className: 'code-line', charDelay: 5 },
    { text: '        46 | \n', className: 'line-number', charDelay: 3 },
    { text: '        47 |     results = cursor.fetchall()\n', className: 'code-line', charDelay: 3 },
    { text: '        48 |     conn.close()\n\n', className: 'code-line', charDelay: 3 },

    { text: '    ', className: '', charDelay: 100 },
    { text: 'Confidence: Medium', className: 'confidence', charDelay: 8 },
    { text: ' | ', className: '', charDelay: 5 },
    { text: 'Detection: Intra-procedural taint analysis\n\n', className: 'confidence', charDelay: 5 },

    { text: '  [', className: '', charDelay: 5 },
    { text: 'critical', className: 'severity-tag', charDelay: 8 },
    { text: '] [Taint-Local] ', className: '', charDelay: 5 },
    { text: 'python-cmdi-system', className: 'rule-name', charDelay: 7 },
    { text: ': detect_command_injection_system\n', className: '', charDelay: 5 },
    { text: '    ', className: '', charDelay: 5 },
    { text: 'CWE-78', className: 'cwe', charDelay: 8 },
    { text: ' | ', className: '', charDelay: 5 },
    { text: 'A03:2021', className: 'cwe', charDelay: 8 },
    { text: '\n\n', className: '', charDelay: 100 },

    { text: '    app.py', className: 'filename', charDelay: 7 },
    { text: ':59\n', className: 'line-number', charDelay: 5 },
    { text: '        56 |     host = request.args.get(\'host\', \'localhost\')\n', className: 'code-line', charDelay: 3 },
    { text: '        57 | \n', className: 'line-number', charDelay: 3 },
    { text: '        58 |     ', className: 'line-number', charDelay: 3 },
    { text: '# VULNERABLE: User input in system command\n', className: 'comment', charDelay: 5 },
    { text: '      > 59 |     ', className: 'pointer', charDelay: 5 },
    { text: 'result = os.system(f"ping -c 1 {host}")\n', className: 'code-line', charDelay: 5 },
    { text: '        60 |     return f"Ping result: {result}"\n', className: 'code-line', charDelay: 3 },

    { text: '\n    ', className: '', charDelay: 100 },
    { text: 'Confidence: Medium', className: 'confidence', charDelay: 8 },
    { text: ' | ', className: '', charDelay: 5 },
    { text: 'Detection: Intra-procedural taint analysis', className: 'confidence', charDelay: 5 },
  ];

  let lineIndex = 0;
  let charIndex = 0;
  let hasStarted = false;

  function typeCharacter() {
    if (lineIndex >= lines.length) {
      // Animation complete - hide cursor
      cursor.style.display = 'none';
      return;
    }

    const currentLine = lines[lineIndex];
    const text = currentLine.text;

    if (charIndex < text.length) {
      // Create span for character with appropriate styling
      const span = document.createElement('span');
      if (currentLine.className) {
        span.className = currentLine.className;
      }
      span.textContent = text[charIndex];
      output.appendChild(span);

      charIndex++;

      // Type next character with some variance for natural feel
      const baseDelay = currentLine.charDelay || 25;
      const variance = Math.random() * 15;
      setTimeout(typeCharacter, baseDelay + variance);
    } else {
      // Move to next line
      charIndex = 0;
      lineIndex++;

      // Small delay between lines
      setTimeout(typeCharacter, 50);
    }
  }

  // Start animation when console becomes visible
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && !hasStarted) {
        hasStarted = true;
        // Small initial delay before starting
        setTimeout(typeCharacter, 500);
        observer.disconnect();
      }
    });
  }, {
    threshold: 0.3 // Start when 30% of element is visible
  });

  const container = document.querySelector('.animated-console-container');
  if (container) {
    observer.observe(container);
  }
</script>
